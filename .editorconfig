# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.{js,ts,tsx,puml,mdx}]
indent_style = tab
indent_size = 4

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off
